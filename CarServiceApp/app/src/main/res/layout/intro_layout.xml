<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentIntro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">


    <ImageView
        android:id="@+id/carFaIntro"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carfa" />

    <ImageView
        android:id="@+id/descLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/carFaIntro"
        app:layout_constraintStart_toStartOf="@+id/carFaIntro"
        app:layout_constraintTop_toBottomOf="@+id/carFaIntro"
        app:srcCompat="@drawable/ic_authorized_autoservis_app" />

    <ImageView
        android:id="@+id/carSVG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/descLogo"
        app:layout_constraintTop_toTopOf="@+id/carFaIntro"
        app:srcCompat="@drawable/ic_car" />
</androidx.constraintlayout.widget.ConstraintLayout>