<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <ScrollView
        android:id="@+id/scrollViewRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">






    </ScrollView>

    <RelativeLayout
        android:id="@+id/nameInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/surnameInp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/nameEditTextInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nameEditTextInp"
            android:layout_alignTop="@+id/nameEditTextInp"
            android:background="#fff"
            android:padding="2dp"
            android:text="Name"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/labelName"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/surnameInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/emailInp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameInp">

        <EditText
            android:id="@+id/surnameEditTextInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/surnameEditTextInp"
            android:layout_alignTop="@+id/surnameEditTextInp"
            android:background="#fff"
            android:padding="2dp"
            android:text="Surname"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelSurname"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/labelSurname"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/passwordInt"
        app:layout_constraintStart_toStartOf="@+id/surnameInp"
        app:layout_constraintEnd_toEndOf="@+id/surnameInp"
        >

        <EditText
            android:id="@+id/emailEditTextInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailEditTextInp"
            android:layout_alignTop="@+id/emailEditTextInp"
            android:background="#fff"
            android:padding="2dp"
            android:text="Email"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelEmail"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/labelEmail"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passwordInt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/passworRepeaddInt"
        app:layout_constraintEnd_toEndOf="@+id/emailInp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emailInp">


        <EditText
            android:id="@+id/passwordEditTextInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/passwordEditTextInt"
            android:layout_alignTop="@+id/passwordEditTextInt"
            android:background="#fff"
            android:padding="2dp"
            android:text="Password"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelPassword"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/labelPassword"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passworRepeaddInt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="@+id/passwordInt"
        app:layout_constraintStart_toStartOf="@+id/passwordInt">


        <EditText
            android:id="@+id/passwordRepeadEditTextInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelRepeadPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/passwordRepeadEditTextInt"
            android:layout_alignTop="@+id/passwordRepeadEditTextInt"
            android:background="#fff"
            android:padding="2dp"
            android:text="Repead Password"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationRepeadPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelRepeadPassword"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/labelRepeadPassword"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/carFaLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carfa" />

    <ImageView
        android:id="@+id/carSVGLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-40"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toBottomOf="@+id/carFaLogin"
        app:srcCompat="@drawable/ic_car" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/passwordInt"
        android:textColor="?attr/logInButtonColor"
        android:background="?attr/logInButtonColor"/>

    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backToLogin"
        android:textAppearance="@style/forgotPassword"
        app:layout_constraintBottom_toBottomOf="@+id/carFaLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quickRegistration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/quickRegistration"
        android:textAlignment="textStart"
        android:textAppearance="@style/welcomeBack"
        app:layout_constraintBottom_toTopOf="@+id/nameInp"
        app:layout_constraintEnd_toEndOf="@+id/passwordInt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passwordInt" />


</androidx.constraintlayout.widget.ConstraintLayout>