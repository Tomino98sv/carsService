<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">



    <ImageView
        android:id="@+id/carFaLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carfa" />

    <ImageView
        android:id="@+id/carSVGLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-40"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toBottomOf="@+id/carFaLogin"
        app:srcCompat="@drawable/ic_car" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:background="?attr/logInButtonColor"
        android:text="Register"
        android:textColor="?attr/logInButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backToLogin"
        android:textAppearance="@style/forgotPassword"
        app:layout_constraintBottom_toBottomOf="@+id/carFaLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewReg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carFaLogin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/quickRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:text="@string/quickRegistration"
                android:textAlignment="textStart"
                android:textAppearance="@style/welcomeBack" />


            <EditText
                android:id="@+id/loginEditTextInpReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quickRegistration"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelLoginReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/loginEditTextInpReg"
                android:layout_alignTop="@+id/loginEditTextInpReg"
                android:background="#fff"
                android:padding="2dp"
                android:text="Login"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationLoginReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginEditTextInpReg"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />


            <EditText
                android:id="@+id/nameEditTextInp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validationLoginReg"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nameEditTextInp"
                android:layout_alignTop="@+id/nameEditTextInp"
                android:background="#fff"
                android:padding="2dp"
                android:text="Firstname"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEditTextInp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />

            <EditText
                android:id="@+id/surnameEditTextInp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validationName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/surnameEditTextInp"
                android:layout_alignTop="@+id/surnameEditTextInp"
                android:background="#fff"
                android:padding="2dp"
                android:text="Surname"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surnameEditTextInp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />

            <EditText
                android:id="@+id/emailEditTextInp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validationSurname"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/emailEditTextInp"
                android:layout_alignTop="@+id/emailEditTextInp"
                android:background="#fff"
                android:padding="2dp"
                android:text="Email"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEditTextInp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />

            <EditText
                android:id="@+id/passwordEditTextInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validationEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/passwordEditTextInt"
                android:layout_alignTop="@+id/passwordEditTextInt"
                android:background="#fff"
                android:padding="2dp"
                android:text="Password"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordEditTextInt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />


            <EditText
                android:id="@+id/passwordRepeadEditTextInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/validationPassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/fill_hard"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelRepeadPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/passwordRepeadEditTextInt"
                android:layout_alignTop="@+id/passwordRepeadEditTextInt"
                android:background="#fff"
                android:padding="2dp"
                android:text="Repead Password"
                android:textAppearance="@style/inputLabelText" />

            <TextView
                android:id="@+id/validationRepeadPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordRepeadEditTextInt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:textAppearance="@style/inputLabelText" />


        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
