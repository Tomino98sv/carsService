<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword.CreateNewPassword"
    android:background="@color/black">


    <ImageView
        android:id="@+id/carFaLogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carfa" />


    <ImageView
        android:id="@+id/carSVGLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-40"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toBottomOf="@+id/carFaLogin"
        app:srcCompat="@drawable/ic_car" />

    <Button
        android:id="@+id/createPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:background="?attr/logInButtonColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Create Password"
        android:textColor="?attr/logInButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backToLogin"
        android:textAppearance="@style/forgotPassword"
        app:layout_constraintBottom_toBottomOf="@+id/carFaLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carFaLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordInp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carFaLogin">

        <TextView
            android:id="@+id/createPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createNewPassword"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textAppearance="@style/welcomeBack" />
    </ScrollView>


    <RelativeLayout
        android:id="@+id/newPasswordInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/Repead_newPasswordInp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/newPasswordEditText"
            android:layout_alignTop="@+id/newPasswordEditText"
            android:text="Login"
            android:background="#fff"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

        <TextView
            android:id="@+id/validationNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPasswordEditText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Repead_newPasswordInp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/createPassword"
        app:layout_constraintEnd_toEndOf="@+id/newPasswordInp"
        app:layout_constraintStart_toStartOf="@+id/newPasswordInp">


        <EditText
            android:id="@+id/Repead_newPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/fill_hard"
            android:ems="10"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelRepead_newPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Repead_newPasswordEditText"
            android:layout_alignTop="@+id/Repead_newPasswordEditText"
            android:background="#fff"
            android:textAppearance="@style/inputLabelText"
            android:padding="2dp"
            android:text="Password"
            />

        <TextView
            android:id="@+id/validationRepead_NewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Repead_newPasswordEditText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:textAppearance="@style/inputLabelText" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>