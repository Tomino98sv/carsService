<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titleExitAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/underline"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/welcomeBack"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/msgExitAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleExitAlert"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginBottom="80dp"
        android:fontFamily="@font/roboto_light"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgExitAlert"
        android:layout_alignStart="@+id/msgExitAlert"
        android:layout_alignEnd="@+id/msgExitAlert"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-66dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leaveExitDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Leave"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/specialOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="5dp"
            android:text="special"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancelExitDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="5dp"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>