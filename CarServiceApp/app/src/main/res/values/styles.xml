<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="carBg">@color/vector_carColor</item>
        <item name="logInButtonColor">@color/buttonLoginColor</item>
    </style>

    <style name="forgotPassword">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#5F51CB</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="welcomeBack">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#5F51CB</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

</resources>